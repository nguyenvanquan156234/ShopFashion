@model BanHangOnline.Models.EF.Order
@{
    ViewBag.Title = "Chi tiết đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section naviheader{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="" class="nav-link">Chi tiết đơn hàng</a>
        </li>
    </ul>
}

<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewBag.Title</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Mã đơn hàng</label>
                        <p class="form-control">@Model.Code</p>
                    </div>
                    <div class="form-group">
                        <label>Tên khách hàng</label>
                        <p class="form-control">@Model.CustomerName</p>
                    </div>
                    <div class="form-group">
                        <label>Số điện thoại</label>
                        <p class="form-control">@Model.Phone</p>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <p class="form-control">@Model.Email</p> <!-- Assuming Email is a property of Order -->
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Tiền</label>
                        <p class="form-control">@Model.TotalAmount</p>
                    </div>
                    <div class="form-group">
                        <label>Ngày tạo</label>
                        <p class="form-control">@Model.CreateDate</p>
                    </div>
                    <div class="form-group">
                        <label>Trạng thái</label>
                        <p class="form-control">@(Model.typePayment == 1 ? "Chờ thanh toán" : "Đã thanh toán")</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h2>Danh sách sản phẩm</h2>
                </div>
                <div class="col-md-12">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tên sản phẩm</th>
                               
                                <th>Tên Giá</th>
                                <th>Tên Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.OrderDetails.Count; i++)
                            {
                                var item = Model.OrderDetails.ElementAt(i);
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@item.Product.Title</td>
            


                                    <td>@item.Price</td>
                                    <td>@item.Quantity</td>
                                    <td>@(item.Price * item.Quantity)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Footer
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
